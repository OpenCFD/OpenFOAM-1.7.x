FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 101325;

boundaryField
{
    outlet
    {
        type            buoyantPressure;
        value           uniform 101325;
    }

    sides
    {
        type            fixedValue;
        value           $internalField;
    }
    base
    {
        type            buoyantPressure;
        value           $internalField;
    }
    inlet
    {
        type            buoyantPressure;
        value           $internalField;
    }
    frontBack
    {
        type            empty;
    }
}


