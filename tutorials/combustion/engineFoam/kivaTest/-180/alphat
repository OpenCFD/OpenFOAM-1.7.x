FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "-180";
    object      alphat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    piston
    {
        type            alphatWallFunction;
        Prt             0.85;
        value           uniform 0;
    }
    liner
    {
        type            alphatWallFunction;
        Prt             0.85;
        value           uniform 0;
    }
    cylinderHead
    {
        type            alphatWallFunction;
        Prt             0.85;
        value           uniform 0;
    }
}


