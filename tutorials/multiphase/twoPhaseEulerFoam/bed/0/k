FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [ 0 2 -2 0 0 0 0 ];

internalField       uniform 1.0;

boundaryField
{
    bottom
    {
        type               fixedValue;
        value              uniform 1.0;
    }

    top
    {
        type               inletOutlet;
        inletValue         uniform 1.0;
        value              uniform 1.0;
    }

    walls
    {
        type               zeroGradient;
    }

    frontBack
    {
        type               empty;
    }

}

