FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      Theta;
}
// ************************************************************************* //

dimensions          [ 0 2 -2 0 0 0 0 ];

internalField       uniform 0;

boundaryField
{

    bottom
    {
        type                fixedValue;
        value               uniform 1.0e-8;
    }

    top
    {
        type                inletOutlet;
        inletValue          uniform 1.0e-8;
    }

    walls
    {
        type                zeroGradient;
    }

	frontBack
	{
	type					empty;
	}

}

