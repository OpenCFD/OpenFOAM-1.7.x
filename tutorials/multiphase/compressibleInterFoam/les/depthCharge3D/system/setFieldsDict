FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha1 1
    volScalarFieldValue p_rgh 100000
);

regions
(
    sphereToCell
    {
        centre ( 0.5 0.5 0.5 );
        radius 0.1;
        fieldValues
        (
            volScalarFieldValue alpha1 0
            volScalarFieldValue p_rgh 1000000
        );
    }
    boxToCell
    {
        box ( -10 1 -1 ) ( 10 10 1 );
        fieldValues
        (
            volScalarFieldValue alpha1 0
        );
    }
);


// ************************************************************************* //
