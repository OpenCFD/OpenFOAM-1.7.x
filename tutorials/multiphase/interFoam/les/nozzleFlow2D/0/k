FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1e-11;

boundaryField
{
    axis
    {
        type            empty;
    }

    inlet           
    {
        type            fixedValue;
        value           uniform 1e-05;
    }

    wall            
    {
        type            fixedValue;
        value           uniform 1e-11;
    }

    atmosphere      
    {
        type            inletOutlet;
        inletValue      uniform 0.001;
        value           uniform 1e-11;
    }

    front         
    {
        type            wedge;
    }

    back         
    {
        type            wedge;
    }
}

// ************************************************************************* //
