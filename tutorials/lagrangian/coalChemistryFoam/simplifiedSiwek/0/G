FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      G;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -3 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    top
    {
        type            MarshakRadiation;
        T               T;
        emissivity      1.0;
        value           uniform 0;
    }
    bottom
    {
        type            MarshakRadiation;
        T               T;
        emissivity      1.0;
        value           uniform 0;
    }
    walls
    {
        type            MarshakRadiation;
        T               T;
        emissivity      1.0;
        value           uniform 0;
    }
    symmetry
    {
        type            symmetryPlane;
    }
    frontAndBack
    {
        type            empty;
    }
}


